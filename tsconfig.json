{
  "compilerOptions": {
    "target": "ES6", // Specify ECMAScript target version
    "module": "ESNext", // Specify module code generation
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Specify library files to include
    "jsx": "react-jsx", // Use the modern JSX transform
    "strict": true, // Enable strict type-checking options
    "moduleResolution": "node", // Resolve modules using Node.js
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent file naming
    "types": ["node", "@testing-library/jest-dom", "@testing-library/react"],
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
    }
  },
  "include": ["src/**/*", "svg.d.ts"], // Include files in the "src" directory
  "exclude": ["node_modules"] // Exclude the "node_modules" directory
}
